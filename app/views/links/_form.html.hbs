<form>
  <section id="content-with-sidebar">
    <header class="editable-header">
      <input type="text" name="name" id="link_name" value="{{name}}" class="editable-header-field" />
    </header>

    <ol>
      <li class="slug-field">
        <label for="link_slug">Permalink</label>
          {{#if parent}}
            {{#if parent.uri}}
              /{{parent.uri}}/
            {{else}}
              /
            {{/if}}
          {{else}}
            /
          {{/if}}
        <input type="text" name="slug" id="link_slug" value="{{slug}}" placeholder="Generated from title"/>
      </li>
      <li class="string-field">
        <label for="link_href">Link address</label>
        <input type="text" name="href" id="link_href" value="{{href}}" />
      </li>
    </ol>

    <ol id="variant-fields" />
  </section>

  <aside id="content-sidebar">
    <header>
      <h2>Link status</h2>
    </header>
    <ol>
      <li class="check-box-field">
        <input type="checkbox" name="published" id="link_published" value="1" />
        <label for="link_published">Published</label>
      </li>
      <li class="check-box-field">
        <input type="checkbox" name="show_in_navigation" id="link_show_in_navigation" value="1" />
        <label for="link_show_in_navigation">Show in navigation</label>
      </li>
    </ol>

    <header>
      <h2>Link type</h2>
    </header>
    <ol>
      <li class="select-field">
        <select name="variant_id" id="link_variant">
          <option value="">None</option>
          {{#each variants}}
            <option value="{{id}}">{{name}}</option>
          {{/each}}
        </select>
      </li>
    </ol>

    <header>
      <h2>Actions</h2>
    </header>
    <ol class="buttons">
      <li>
        <button type="submit">Save link</button>
      </li>
    </ol>
  </aside>
</form>
